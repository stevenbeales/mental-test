MetricFu.configuration.configure_metrics.each do |metric|
  metric.enabled = ![:stats, :reek, :flog].include?(metric.name)
end

MetricFu.configuration.configure_metric(:churn) do |churn|
  churn.ignore_files = 'HISTORY.md, TODO.md'
  churn.start_date = '1 day ago'
end

MetricFu.configuration.configure_metric(:cane) do |cane|
  cane.enabled = true
  cane.abc_max = 15
  cane.line_length = 125
  cane.no_doc = 'y'
  cane.no_readme = 'y'
end

MetricFu.configuration.configure_metric(:saikuro) do |saikuro|
  saikuro = {"--input_directory" => '"./models | ./lib | ./services"'}
end

MetricFu.configuration.configure_metric(:flay) do |flay|
  flay.dirs_to_flay = ['./models', './lib', './services']
end

MetricFu.configuration.configure_metric(:roodi) do |roodi|
  roodi.dirs_to_roodi = ['./models', './lib', './services']
end
